<domain type='kvm'>
    <name>{{ name }}</name>
    <memory unit='GB'>{{ memoryInGB }}</memory>
    <vcpu>{{ vcpus }}</vcpu>
    <os>
        <type arch='x86_64'>hvm</type>
        <bootmenu enable='no'/>
        <boot dev='hd'/>
{% if cmdline is not null %}
        <cmdline>{{ cmdline }}</cmdline>
{% endif %}
    </os>
    <features>
        <acpi/>
        <apic/>
    </features>
    <clock offset='utc'/>
    <on_reboot>restart</on_reboot>
    <devices>
        <disk type='file' device='disk'>
            <driver name='qemu' type='qcow2'/>
            <source file='{{ diskFile }}'/>
            <target dev='vda' bus='virtio'/>
        </disk>
{% if bootInitIso is not null %}
        <disk type='file' device='cdrom'>
            <driver name='qemu' type='raw'/>
            <source file='{{ bootInitIso }}'/>
            <target dev='hda' bus='ide'/>
            <readonly/>
        </disk>
{% endif %}
        <interface type='network'>
            <mac address='{{ networkMac }}'/>
            <source network='{{ networkName }}' bridge='{{ networkInterface }}'/>
            <model type='virtio'/>
            <alias name='net0'/>
        </interface>
        <console type='pty'>
            <target type='serial' port='0'/>
        </console>
        <input type='mouse' bus='ps2'>
            <alias name='input0'/>
        </input>
        <input type='keyboard' bus='ps2'>
            <alias name='input1'/>
        </input>
        <graphics type='spice' port='5900' autoport='yes' listen='127.0.0.1'>
            <listen type='address' address='127.0.0.1'/>
            <image compression='off'/>
        </graphics>
        <video>
            <model type='cirrus' vram='16384' heads='1' primary='yes'/>
            <alias name='video0'/>
        </video>
        <memballoon model='virtio'/>
    </devices>
{% if fwCfg is not null %}
    <commandline xmlns="http://libvirt.org/schemas/domain/qemu/1.0">
        <arg value='-fw_cfg'/>
        <arg value='{{ fwCfg }}'/>
    </commandline>
{% endif %}
</domain>