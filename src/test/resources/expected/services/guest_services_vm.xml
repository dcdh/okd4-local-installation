<domain type='kvm'>
    <name>services.sandbox.okd.local</name>
    <memory unit='GB'>4</memory>
    <vcpu>2</vcpu>
    <os>
        <type arch='x86_64'>hvm</type>
        <bootmenu enable='no'/>
        <boot dev='hd'/>
    </os>
    <features>
        <acpi/>
        <apic/>
    </features>
    <clock offset='utc'/>
    <on_reboot>restart</on_reboot>
    <devices>
        <disk type='file' device='disk'>
            <driver name='qemu' type='qcow2'/>
            <source file='/tmp/okd/services.sandbox.okd.local/CentOS-8-GenericCloud-8.2.2004-20200611.2.x86_64.qcow2'/>
            <target dev='vda' bus='virtio'/>
        </disk>
        <disk type='file' device='cdrom'>
            <driver name='qemu' type='raw'/>
            <source file='/tmp/okd/services.sandbox.okd.local/boot-init.iso'/>
            <target dev='hda' bus='ide'/>
            <readonly/>
        </disk>
        <interface type='network'>
            <mac address='52:54:10:00:05:57'/>
            <source network='okd_network' bridge='virbr1'/>
            <model type='virtio'/>
            <alias name='net0'/>
        </interface>
        <console type='pty'>
            <target type='serial' port='0'/>
        </console>
        <input type='mouse' bus='ps2'>
            <alias name='input0'/>
        </input>
        <input type='keyboard' bus='ps2'>
            <alias name='input1'/>
        </input>
        <graphics type='spice' port='5900' autoport='yes' listen='127.0.0.1'>
            <listen type='address' address='127.0.0.1'/>
            <image compression='off'/>
        </graphics>
        <video>
            <model type='cirrus' vram='16384' heads='1' primary='yes'/>
            <alias name='video0'/>
        </video>
        <memballoon model='virtio'/>
    </devices>
</domain>